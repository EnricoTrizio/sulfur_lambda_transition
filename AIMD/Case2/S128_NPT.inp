&GLOBAL
  PRINT_LEVEL LOW
  WALLTIME 1000000000
  PROJECT S128_NPT
  RUN_TYPE MD
  SEED 300
&END GLOBAL

&EXT_RESTART
 RESTART_FILE_NAME  S128_NPT-1.restart
 RESTART_DEFAULT TRUE   
 RESTART_POS TRUE
 RESTART_VEL TRUE
 RESTART_THERMOSTAT TRUE
 RESTART_COUNTERS TRUE
 RESTART_RANDOMG TRUE   
&END EXT_RESTART

&MOTION
  &MD
    COMVEL_TOL 0.000005
    ANGVEL_TOL 0.000005
    ANGVEL_ZERO
    ENSEMBLE NPT_I
   # ENSEMBLE NVT
    STEPS 500 ##steps
    TIMESTEP 2
    TEMPERATURE 900
    
    &THERMOSTAT 
      TYPE CSVR
      &CSVR
        TIMECON 50.
      &END CSVR
    &END THERMOSTAT

    &BAROSTAT
       PRESSURE 10000
       TIMECON 500.
    &END BAROSTAT
  &END MD

 &PRINT
    &TRAJECTORY
      ADD_LAST NUMERIC
      FORMAT PDB
      &EACH
        MD 1
      &END EACH
    &END TRAJECTORY
    
    &RESTART
      ADD_LAST NUMERIC
      &EACH
        MD 1
      &END EACH
    &END RESTART
    &RESTART_HISTORY ON
    &END

   &FORCES
     FILENAME forces
     &EACH
     MD 1
     &END EACH
   &END FORCES

   &CELL
   &END

  &STRESS
     FILENAME stress
     &EACH
     MD 1
     &END EACH
   &END STRESS
   
 &END PRINT

! &FREE_ENERGY
!   &METADYN
!   USE_PLUMED .TRUE.
!   PLUMED_INPUT_FILE ./plumed_grifo.dat                                                                                                                                                                     
!   &END METADYN
! &END FREE_ENERGY   

&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    CHARGE 0
    MULTIPLICITY 1
    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    WFN_RESTART_FILE_NAME  S128_NPT-RESTART.kp

    &MGRID
      CUTOFF 300
      REL_CUTOFF 40
    &END MGRID
    
    &SCF
    # SCF_GUESS ATOMIC
     SCF_GUESS RESTART
      EPS_SCF 1.0E-5
      MAX_SCF 50
      ADDED_MOS 50
      CHOLESKY INVERSE
      &DIAGONALIZATION ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING T
        METHOD BROYDEN_MIXING
        ALPHA 0.2
        BETA 0.5
        NBROYDEN 16
        &END MIXING
      &SMEAR ON
        METHOD FERMI_DIRAC
          ELECTRONIC_TEMPERATURE [K] 300
      &END SMEAR
    &END SCF

    &XC
     &XC_FUNCTIONAL PBE
     &END XC_FUNCTIONAL
    &END XC

#    &KPOINTS
#      FULL_GRID
#      SCHEME MONKHORST-PACK 1 1 1
#      SYMMETRY OFF
#    &END KPOINTS
  &END DFT

  &SUBSYS
    &CELL
      ABC 14.91 14.91 14.91
      PERIODIC XYZ
    &END CELL
    &TOPOLOGY
       COORD_FILE_NAME coord.xyz
       COORD_FILE_FORMAT XYZ
    &END TOPOLOGY

    &KIND S
      BASIS_SET  DZVP-MOLOPT-SR-GTH-q6
      POTENTIAL GTH-PBE-q6
      ELEMENT S
    &END KIND

  &END SUBSYS

&END FORCE_EVAL
